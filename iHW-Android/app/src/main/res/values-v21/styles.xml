<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:colorAccent">@color/accent_red</item>
        <item name="android:spinnerItemStyle">
            @android:style/Widget.Material.Light.TextView.SpinnerItem
        </item>
        <item name="android:textViewStyle">@android:style/Widget.Material.TextView</item>
        <item name="android:editTextStyle">@android:style/Widget.Material.Light.EditText</item>
        <item name="android:buttonStyle">@android:style/Widget.Material.Light.Button</item>
        <item name="android:checkboxStyle">
            @android:style/Widget.Material.Light.CompoundButton.CheckBox
        </item>
        <item name="android:popupMenuStyle">@android:style/Widget.Material.PopupMenu</item>
        <item name="android:spinnerStyle">@android:style/Widget.Material.Spinner</item>

        <!-- animations -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="PopupTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/accent_red</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@drawable/dark_red</item>
        <item name="android:selectableItemBackground">@drawable/action_item_selector</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

</resources>